%html.no-js{:lang => ""}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %title Cepora!
    %meta{:content => "", :name => "description"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %link{:href => "apple-touch-icon.png", :rel => "apple-touch-icon"}
    / Place favicon.ico in the root directory
    %link{:href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel => "stylesheet"}
    %link{:href => "css/main.css", :rel => "stylesheet"}
    %script{:src => "js/modernizr-2.8.3.min.js"}
  %body
    /[if lt IE 8]
      %p.browserupgrade 
        You are using an 
        %strong outdated
        browser. Please 
        %a{ :href => "http://browsehappy.com/"} upgrade your browser
        to improve your experience
    / Add your site or application content here
    %header
      #logo
        %img{:alt => "Homepage", :src => "img/logo-white.png"}
      #cd-hamburger-menu
        %a.cd-img-replace{:href => "#0"} Menu
      #cd-cart-trigger
        %a.cd-img-replace{:href => "#0"} Cart
    %nav#main-nav
      %ul
        %li
          %a{:href => "#0"} Home
        %li
          %a{:href => "#0"} About
        %li
          %a.current{:href => "#0"} Services
        %li
          %a{:href => "#0"} Gallery
        %li
          %a{:href => "#0"} Contact
    / .top
    /   .container
    /     .row
    /       .col-lg-3.col-md-3.col-sm-4.col-xs-9
    /         %h1.top-logo Cepora

    %a.cd-cart{:href => "#0"}
      %span 0

    / Bottom bar with filter and cart info
    .bar
      .filter
        %span.filter__label Поиск:
        %button.action.filter__item.filter__item--selected{"data-filter" => "*"} Все
        %button.action.filter__item{"data-filter" => ".he"}
          %i.fa.fa-mars
          %span.action__text Для него
        %button.action.filter__item{"data-filter" => ".she"}
          %i.fa.fa-venus
          %span.action__text Для неё
    
    

    / Main view
    .grid-view
      / Grid
      %section.grid.container
        .row.grid-items


    %script#entry-template{:type => "text/x-handlebars-template"}
      .grid__item.col-md-3.col-sm-6.col-xs-12{ :class => "{{ sex }}" }
        .grid__item-inner
          .slider
            {{#each img}}
              .slider__item
                %img{:alt => "", :src => "img/item/{{name}}" }
            {{/each}}


          .grid__price.grid__price-sale{ :class => "{{#if price_old }} color-red {{else}} color-green {{/if}}" }
            {{#if price_old }}
              %p.grid__price-old {{ price_old }}
            {{/if}}
            %p.grid__price-new
              {{ price }}
              %i.fa.fa-rub

          .grid__info
            .cd-customization
              .color{"data-type" => "select"}
                %ul
                  {{#each color}}
                    %li{ :class => "color-{{name}}", :data => { :color => "{{name}}" } } {{name}}
                  {{/each}}
              .size{"data-type" => "select"}
                %ul
                  {{#each size}}
                    %li.active {{name}}
                  {{/each}}
              %button.btn.btn-border.btn-border-red.btn-border-red-full.add-to-cart
                %em В корзину
                %svg{:height => "32px", :viewbox => "0 0 32 32", :width => "32px", :x => "0px", :y => "0px"}
                  %path{:d => "M9,17l3.9,3.9c0.1,0.1,0.2,0.1,0.3,0L23,11", :fill => "none", :stroke => "#FFFFFF", "stroke-dasharray" => "19.79 19.79", "stroke-dashoffset" => "19.79", "stroke-linecap" => "square", "stroke-miterlimit" => "10", "stroke-width" => "2"}     
                          
            .meta
              %h3.meta__title {{ name }}
              %span.meta__brand


    #dialog-cart.dialog
      .dialog__overlay
      .dialog__content
        .morph-shape
          %svg{:height => "100%", :preserveaspectratio => "none", :viewbox => "0 0 560 280", :width => "100%", :xmlns => "http://www.w3.org/2000/svg"}
            %rect{:fill => "none", :height => "276", :width => "556", :x => "3", :y => "3"}
        .dialog-inner.container-fluid
          .checkout
