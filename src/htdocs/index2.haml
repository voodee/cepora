            %a.checkout__close{"data-dialog-close" => ""} 
              %i.fa.fa-close

          %table.table.cart__table
            / %tr
            /   %th Ваш заказ
            /   %th
            /   %th
            %tr
              %td Браслет PureStength
              %td
                %input{ :type => 'number', :value => '1', :max => '20', :min => '0' }
              %td
                1 250
                %i.fa.fa-rub

            %tr
              %td Магнитовая хрень
              %td
                %input{ :type => 'number', :value => '1', :max => '20', :min => '0' }
              %td
                450
                %i.fa.fa-rub

            %tr
              %td Череповец
              %td
                %input{ :type => 'number', :value => '1', :max => '20', :min => '0' }
              %td
                750
                %i.fa.fa-rub


          %section.input__box.input__box--center
            .row
              .col-md-4
                %span.input.input--haruki
                  %input#cart-name.input__field.input__field--haruki{:type => "text"}
                  %label.input__label.input__label--haruki{:for => "cart-name"}
                    %span.input__label-content.input__label-content--haruki Ваше имя
              .col-md-4
                %span.input.input--haruki
                  %input#cart-phone.input__field.input__field--haruki{:type => "tel"}
                  %label.input__label.input__label--haruki{:for => "cart-phone"}
                    %span.input__label-content.input__label-content--haruki Телефон
              .col-md-4
                %a.btn.btn-border.btn-border-red.btn-border-red-full{ :href => '#', :title => '' } Оформить заказ

            .row
              .col-md-4.col-md-offset-8
                %p.text.text--small.text--margin-top
                  или&nbsp;
                  %a.link.link--grey{ :href => '', :title => '' } добавить товар





