/* ---- page dots ---- */

.flickity-page-dots
  position: absolute
  width: 100%
  bottom: -25px
  padding: 0
  margin: 0
  list-style: none
  text-align: center
  line-height: 1

.flickity-rtl .flickity-page-dots
  direction: rtl

.flickity-page-dots .dot
  display: inline-block
  width: 10px
  height: 10px
  margin: 0 8px
  background: #333
  border-radius: 50%
  /* IE8 */
  opacity: 0.25
  cursor: pointer
  &.is-selected
    /* IE8 */
    opacity: 1