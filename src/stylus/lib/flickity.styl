.flickity-enabled
  position: relative
  &:focus
    outline: none

.flickity-viewport
  overflow: hidden
  position: relative
  height: 100%

.flickity-slider
  position: absolute
  width: 100%
  height: 100%

/* draggable */

.flickity-enabled.is-draggable
  -webkit-tap-highlight-color: transparent
  tap-highlight-color: transparent
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  .flickity-viewport
    cursor: move
    cursor: -webkit-grab
    cursor: grab
    &.is-pointer-down
      cursor: -webkit-grabbing
      cursor: grabbing

/* ---- previous/next buttons ---- */

.flickity-prev-next-button
  position: absolute
  top: 50%
  width: 44px
  height: 44px
  border: none
  border-radius: 50%
  background: white
  background: hsla(0, 0%, 100%, 0.75)
  cursor: pointer
  /* vertically center */
  transform: translateY(-50%)
  &:hover
    background: white
  &:focus
    outline: none
    box-shadow: 0 0 0 5px #09F
  &:active
    /* IE8 */
    opacity: 0.6
  &.previous
    left: 10px
  &.next
    right: 10px

/* right to left */

.flickity-rtl .flickity-prev-next-button
  &.previous
    left: auto
    right: 10px
  &.next
    right: auto
    left: 10px

.flickity-prev-next-button
  &:disabled
    /* IE8 */
    opacity: 0.3
    cursor: auto
  svg
    position: absolute
    left: 20%
    top: 20%
    width: 60%
    height: 60%
  .arrow
    fill: #333
  &.no-svg
    color: #333
    font-size: 26px

