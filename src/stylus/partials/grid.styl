/* -------------------------------- 

Product Customization

-------------------------------- */

$box-size = 34px

.grid
  padding 0
  position relative
  text-align center
  user-select none

  &-view
    background-color #f2f2f2
    padding 7rem 0 20rem
    overflow hidden


  .slider
    padding 0

    .no-touch &
      padding 0 0 1.25em

    &__item
      width 100%
      min-height 100%
      display flex
      flex-direction column
      justify-content center
        
      img
        display block
        width 100%
        
        @media screen and (max-width: $screen-sm-min)
          width 80%
          margin 0 auto
  
  &-items
    position relative
    margin 0

  &__price
    position absolute
    border-radius 50%
    right -1rem 
    top -1rem
    display inline-block
    width 10rem
    height 10rem
    font-size 2rem
    padding 4rem 0
    line-height 2rem
    color #fff
    white-space nowrap
    font-weight 600
    z-index 1
    transition all 0.5s ease
    
    .grid__item:hover &
      transform scale(1.1,1.1) rotate(5deg)
      
    p 
      margin 0
      padding 0
        
    &-old
      text-decoration line-through
      margin-top -1.2rem !important
      color #666
      font-size 1.4rem


  &__item
    margin-bottom 2rem
    
    .touch &
      margin-bottom 4rem
    
    &-inner
      background-color #fff
      box-shadow 0 2px 10px rgba(0, 0, 0, .08)

    // .no-touch &:hover, &.hover
    .no-touch &:hover
    &:hover  
      
      .cd-customization
        /* product customization visible */
        pointer-events auto
        visibility visible
        opacity 1
        // transition opacity .2s 0s

      .meta
        visibility hidden
        opacity 1
    
    .touch &
      .meta
      .cd-customization
        position relative
        visibility visible
        opacity 1
    
  &__info
    position relative
    
        
      

.cd-customization 
  position relative
  z-index 3
  // position absolute
  // z-index 2
  // left 0
  // bottom 0
  width 100%
  padding 0 1.6rem 1.6rem 1.59rem 
  // visibility hidden
  // opacity 0
  pointer-events none
  // transition opacity .2s 0s
  visibility hidden
  opacity 0

  &:after
    clear both
    content ''
    display table

  > *
    float left

  .color
  .size
  .add-to-cart
    height 34px
    position relative
    overflow hidden


  .color
  .size 
    /* these are the color and size options */
    display inline-block
    cursor pointer
    box-shadow inset 0 0 0 1px #e5e5e5

    /* Force Hardware Acceleration - fix a bug on Safari */
    transform translateZ(0)
    backface-visibility hidden

    &:hover
      box-shadow inset 0 0 0 1px #ccc

    ul
      list-style none
      margin 0
      padding 0
      display inline-block
      // position absolute
      // left 50%
      // top 50%
      // bottom auto
      // right auto
      // transform translateX(-50%) translateY(-50%)
      width 100%
      border 1px solid transparent
      
      position relative
      transform translateY(0)

      li
        position relative
        height 34px
    

    for num in (1..20)
    
      &.selected-{num}
        ul 
          transform translateY( -( $box-size * (num - 1) ) )
    
        

      
