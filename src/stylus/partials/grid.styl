    &.is-open
      /* color/size list open - make ul element visible */
      overflow visible
      box-shadow none

      &:after
        /* remove the arrow icon for the size option element */
        display: none

      ul
        box-shadow 0 2px 3px rgba(0, 0, 0, .1)
